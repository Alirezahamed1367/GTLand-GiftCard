# Database Configuration (SQLite - نیاز به نصب ندارد)
DATABASE_URL=sqlite:///data/gt_land.db

# یا برای PostgreSQL (در صورت نیاز):
# DATABASE_URL=postgresql://username:password@localhost:5432/gt_land
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=gt_land
# DB_USER=your_username
# DB_PASSWORD=your_password

# Google Sheets API
GOOGLE_CREDENTIALS_PATH=config/credentials.json

# Application Settings
APP_NAME=GT-Land Manager
APP_VERSION=1.0.0
DEBUG_MODE=False
LOG_LEVEL=INFO

# Directories
EXPORT_DIR=data/exports
TEMPLATE_DIR=templates
LOG_DIR=logs

# Performance
MAX_WORKERS=4
BATCH_SIZE=1000
TIMEOUT_SECONDS=300
